{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "awsscripts:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			// "dependsOn": [
			// 	"docker-build"
			// ],
			"dockerRun": {
				"image": "awsscripts",
				"volumes": [
					{
						"localPath": "${userHome}${pathSeparator}.aws${pathSeparator}credentials",
						"containerPath": "/home/appuser/.aws/credentials",
						"permissions": "ro"
					},
					{
						"containerPath": "/app", 
						"localPath": "${workspaceFolder}"
					}
				]
			},
			"python": {
				"file": "test.py"
			},
			""
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug-windows",
			// "dependsOn": [
			// 	"docker-build"
			// ],
			"dockerRun": {
				"image": "awsscripts",
				"volumes": [
					{
						"localPath": "%userprofile%\\.aws\\credentials",
						"containerPath": "/home/appuser/.aws/credentials",
						"permissions": "ro"
					},
					{
						"containerPath": "/app", 
						"localPath": "${workspaceFolder}"
					}
				]
			},
			"python": {
				"file": "test.py"
			}
		}
	]
}